<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <strong><a href="/post/{{id}}">{{title}}</a></strong>
        <div><em>{{format_cut_content content}} <a href="/post/{{id}}"></em> &hellip; read more</a></div>
      </div>
      <div class="meta">
        <br>
        by <strong>{{user.username}}</strong> on
        {{format_date created_at}}
        |
        {{comments.length}} {{format_plural "comment" comments.length}}
      </div>
    </article>

  </li>
  {{/each}}
</ol>